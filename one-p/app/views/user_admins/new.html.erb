<div class="Sign_Up">
<center><h2>Sign Up</h2>

<% if @errors %>
   <div class="error_container">
       <p><strong> There is a problem</strong></p>
       <% @errors.each do |error| %>
         <p><%= error %></p>
       <% end %>
   </div>
<% end %>

<%= form_for :user_admin, url: {action: "create"} do |f| %>
  
  <%= f.password_field :key, placeholder: "Key" %><br>
  
  <%= f.email_field :email, placeholder: "Email" %><br>
  
  <%= f.password_field :password, placeholder: "Password" %><br>
  <%= f.submit "Sign Up" %>
<% end %>
</center>
</div>